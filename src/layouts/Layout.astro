---
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import '@fontsource/fira-code/400.css';
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/500.css';
import '@fontsource/poppins/600.css';
import DynamicBackground from '../components/DynamicBackground';

interface Props {
  title: string;
  description?: string;
}

const { 
  title = "DevFolio - Portfolio de Développeur",
  description = "Portfolio interactif et moderne présentant mes projets et compétences en développement."
} = Astro.props;
---

<!doctype html>
<html lang="fr" class="dark scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="bg-navy text-slate-light font-inter overflow-x-hidden">
    <DynamicBackground client:only />
    <div class="relative min-h-screen">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  :root {
    --primary: #64ffda;
  }

  ::selection {
    background-color: var(--primary);
    color: #0a192f;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    min-height: 100vh;
  }

  /* Scrollbar personnalisée */
  ::-webkit-scrollbar {
    width: 12px;
  }

  ::-webkit-scrollbar-track {
    background: #0a192f;
  }

  ::-webkit-scrollbar-thumb {
    background-color: #233554;
    border: 3px solid #0a192f;
    border-radius: 10px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background-color: #64ffda;
  }
</style>