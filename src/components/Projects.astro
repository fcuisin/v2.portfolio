---
import { projects } from '../data/projects.json';
---

<section id="projets" class="py-20 min-h-screen px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <h2 class="flex items-center gap-2 sm:gap-4 text-2xl sm:text-3xl font-bold text-slate-lighter mb-12">
      <span class="text-primary font-fira-code text-base sm:text-xl">02.</span>
      Mes Projets
      <div class="flex-1 h-px bg-navy-lighter ml-4"></div>
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 sm:gap-8">
      {projects.map((project) => (
        <div class="bg-navy-light rounded-lg overflow-hidden transition-transform duration-300 hover:-translate-y-2 group">
          <div class="relative">
            <div class="absolute inset-0 bg-primary/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <img 
              src={`https://picsum.photos/seed/${project.title.replace(/\s+/g, '')}/600/340`} 
              alt={project.title} 
              class="w-full h-48 object-cover"
            />
          </div>
          <div class="p-6">
            <p class="font-fira-code text-primary text-sm mb-2">Projet Featured</p>
            <h3 class="text-slate-lighter text-xl font-bold mb-3">{project.title}</h3>
            <p class="text-secondary text-sm mb-4 line-clamp-3">{project.description}</p>
            <ul class="flex flex-wrap gap-2 text-xs font-fira-code mb-5">
              {project.technologies.map(tech => (
                <li class="bg-navy px-2 py-1 rounded text-slate-light">{tech}</li>
              ))}
            </ul>
            <div class="flex gap-4">
              <a
                href={project.github}
                target="_blank"
                rel="noopener noreferrer"
                class="text-slate-lighter hover:text-primary transition-colors duration-300"
                aria-label={`Voir le code source de ${project.title} sur GitHub`}
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
              <a
                href="#"
                target="_blank"
                rel="noopener noreferrer"
                class="text-slate-lighter hover:text-primary transition-colors duration-300"
                aria-label={`Voir le site de ${project.title}`}
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>